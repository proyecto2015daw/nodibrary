<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <link rel="stylesheet" href="css/reset.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="css/style.css">

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/upload.js"></script>
    <script src="js/jquery.form.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.min.js"></script>
    <script src="js/core.js"></script>


    <title>HOLA BEBE</title>
</head>
<body ng-controller="mainController">
<div id="contenedor"></div>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1"><span
                                class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span
                                class="icon-bar"></span><span class="icon-bar"></span></button>
                    <a class="navbar-brand" href="/index">Nodibrary</a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" id="navbar">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="/biblio">Biblio</a>
                        </li>
                        <li>
                            <a href="views.html">Lists</a>
                        </li>
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= user._id %><strong
                                        class="caret"></strong></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="/profile" action="/signup">Profile</a>
                                </li>
                                <li>
                                    <a href="#">Messages</a>
                                </li>
                                <li>
                                    <a href="#">Your Music</a>
                                </li>
                            </ul>
                        </li>
                        <li id="logout">
                            <a href="/logout" class="glyphicon glyphicon-off" title="Logout"></a>
                        </li>
                    </ul>
                </div>

            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-1">
            <table class="table table-striped">
                <tr class="info">
                    <td>Title</td>
                    <td>URL</td>
                </tr>
                <tr ng-repeat="music in musics" ng-click="selectMusic(music)">
                    <td>{{ music.title }}</td>
                    <td>{{ music.url }}</td>
                </tr>
            </table>
        </div>

        <div class="col-sm-4 col-sm-offset-1 text-center">
            <form name="myForm"
                  enctype="multipart/form-data"
                  method="post">
                <div class="form-group">
                    <input type="text" class="form-control input-lg text-center" placeholder="Title"
                           ng-model="newMusic.title" name="userNombre" required>
                    <br>
                    <input type="file" class="form-control input-lg text-center"
                           placeholder="Archivo mp3" ng-model="newMusic.url" nMusicame="userPhoto" required>
                </div>

                <!-- Acciones que podemos realizar en el formulario -->
                <button type="submit" class="btn btn-success btn-lg" ng-click="registrarMusica()"
                        ng-disabled="myForm.$invalid || selected">Registrar
                </button>
            </form>
        </div>

        <div class="col-lg-6 col-sm-6 col-12">
            <form id="uploadForm"
                  enctype="multipart/form-data"
                  action="/api/photos"
                  method="post">
                <label>Introduce nombre</label><input type="text" id="id" name="userNombre"/>
                <input type="file" id="userPhotoInput" name="userPhoto"/>
            </form>

            <span id="status"/>
            <img id="uploadedImage"/>
        </div>
    </div>

</div>

</body>
</html>